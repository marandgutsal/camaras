<%- include("partials/_header.ejs") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form action="/update/<%= data.id_alquiler %>" method="post">
            <div class="form-group">
              <input type="number" name="id_alquiler" value="<%= data.id_alquiler %>" class="form-control">
            </div>
            <div class="form-group">
              <input type="number" name="id_cliente" value="<%= data.id_cliente %>" class="form-control">
            </div>
            <div class="form-group">
              <input type="number" name="id_camara" value="<%= data.id_camara %>" class="form-control">
            </div>
            <div class="form-group">
              <input type="date" name="fecha_alquiler" value="<%= data.fecha_alquiler %>" class="form-control">
            </div>


            <button type="submit" class="btn btn-primary">
              Edit Alquiler
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer.ejs") %>
